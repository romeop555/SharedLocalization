<Window x:Class="WpfApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Grid.Row="0" Margin="12,17,0,28">
            <TextBlock Text="{Binding Loc.AppTitle, Source={StaticResource Localization}}" FontSize="30" />
            <Button Content="{Binding Loc.HiThere, Source={StaticResource Localization}}" Click="ButtonClick" FontSize="30" />
            <TextBlock x:Name="TextBlock1" FontSize="30" />
        </StackPanel>
    </Grid>
</Window>